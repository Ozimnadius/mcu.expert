extends ../../src/core/main

block variables
    - var title = 'Пример курса 3'

block content
    main.page
        section.page__banner
            -
                var data = {
                    color: '--banner-color: var(--color-white)',
                    img: 'course-3',
                    bread: [
                        {
                            href: '/',
                            name: 'Главная'
                        },
                        {
                            href: '/courses/',
                            name: 'Курсы'
                        },
                        {
                            name: title
                        }
                    ],
                    content: `<h2>Мотивационная консультация пациента»</h2>
                                <br>
                               <p>Тренинг, который научит мотивировать пациентов на выздоровление и позволит повысить возвратность пациентов и продажи в клинике</p>
                            `
                };
            include ../../src/components/banner/index
        .page__content
            .course
                //-workshop
                section.course__workshop
                    .container
                        include ../../src/components/course-workshop/index
                //-for
                section.course__for.course__for--grey
                    .container
                        .course-for
                            .course-for__title Для кого тренинг?
                            .course-for__list.course-for__list--3
                                -
                                    var data = [
                                        {
                                            img: '/images/content/course-for/3-1.webp',
                                            title: 'Для начинающих специалистов'
                                        },
                                        {
                                            img: '/images/content/course-for/3-2.webp',
                                            title: 'Для врачей, перешедших из госмедицины'
                                        },
                                        {
                                            img: '/images/content/course-for/3-3.webp',
                                            title: 'Для опытных специалистов'
                                        }
                                    ];
                                each i in data
                                    .course-for__item.course-for__item--2
                                        .course-for__left
                                            .course-for__img
                                                img(src=i.img alt=i.title)
                                        .course-for__right
                                            .course-for__item-title= i.title
                            form(action='/php/getForm.php' method='post' data-event='submit.openForm').course-for__btn
                                input(type="hidden" name="name" value="feedback")
                                button(type="submit") Задать вопрос
                //-businesses
                section.course__businesses
                    .container
                        .course-businesses
                            form(action='/ajax/ajax.php' method='post' data-event='submit.sendForm').course-businesses__form.form
                                input(type="hidden" name="eventName" value="MAIN_FORM")
                                input(type="hidden" name="messageFields" value="{'name':'Имя','sname':'Фамилия','tel':'Телефон','email':'Email','city':'Город','clinic':'Клиника'}")
                                .course-businesses__title.form__title Заполните, пожалуйста, форму и получите главу из книги «Как открыть клинику мечты» в подарок
                                .form__fields
                                    .form__field
                                        input(type='text' name='name' placeholder='Ваше имя' required).form__input
                                    .form__field
                                        input(type='tel' name='tel' placeholder='Телефон' required).form__input
                                    .form__field
                                        input(type='email' name='email' placeholder='Эл. почта' required).form__input
                                    .form__field
                                        input(type='text' name='city' placeholder='Город').form__input
                                    .form__field
                                        input(type='text' name='clinic' placeholder='Клиника').form__input
                                .form__accept
                                    include ../../src/components/accept/index
                                .form__accept
                                    include ../../src/components/accept2/index
                                button(type='submit').form__submit.course-businesses__btn Отправить
                                    template
                                        .form-popup.form
                                            .form__ok
                                                h3 Спасибо
                                                p Ваша заявка принята в обработку. Наши специалисты свяжутся с Вами в ближайшее время.
                //-authors
                section.course__authors
                    .container
                        include ../../src/components/course-authors/index
                //-advantages3
                section.course__advantages3
                    .container
                        include ../../src/components/course-advantages3/index
                //-advantages2
                section.course__advantages2.course__advantages2--nomargin
                    .course-advantages2.course-advantages2--nobg
                        .container
                            .course-advantages2__content
                                .course-advantages2__title Формат тренинга
                                .course-advantages2__list
                                    -
                                        var data = [
                                            {
                                                img: '/images/content/course-advantages2/2-1.svg',
                                                name: '250 часов теории и практики'
                                            },
                                            {
                                                img: '/images/content/course-advantages2/2-2.svg',
                                                name: 'Примеры документов и таблиц'
                                            },
                                            {
                                                img: '/images/content/course-advantages2/2-3.svg',
                                                name: 'Практическая отработка навыков коммуникации и вовлечения'
                                            },
                                            {
                                                img: '/images/content/course-advantages2/2-4.svg',
                                                name: 'Кофе-паузы'
                                            },
                                            {
                                                img: '/images/content/course-advantages2/2-5.svg',
                                                name: 'Раздаточныйматериал'
                                            },
                                            {
                                                img: '/images/content/course-advantages2/2-6.svg',
                                                name: 'Сертификат'
                                            }
                                        ];
                                    each i in data
                                        .course-advantages2__item
                                            .course-advantages2__item-img
                                                img(src=i.img alt=i.name)
                                            .course-advantages2__item-name= i.name
                //-after
                section.course__after.course__after--mt
